<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:u="urn:import:java.util" xmlns:c="urn:import:com.google.gwt.cell.client" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:A="urn:import:com.internalaudit.client.view.AuditEngagement">
	<ui:style>
	.verticalPanel{
	border: solid;
	border-width: 1px;
	
}
.margin{
	margin-right:50px;
}
.lblSubject{
	font-weight:bold;
	margin-top: 3px;
	margin-right: 3px;
}
	.heading{
	font-size: 18px;
}
	</ui:style>
	<g:HTMLPanel>
	
	<A:LabelHeading addStyleNames="{style.heading}" > Audit Notification </A:LabelHeading>
	<g:VerticalPanel width="800px" height="300px">
		<g:HorizontalPanel>
		<g:VerticalPanel>
		<A:LabelHeading text="Memo No:"  addStyleNames=" w3-light-blue {style.margin}"></A:LabelHeading>
		</g:VerticalPanel>
		<g:VerticalPanel>
		<g:TextBox text="Enter Memo"  addStyleNames="w3-panel  {style.margin}"></g:TextBox>
		</g:VerticalPanel>
			<g:VerticalPanel >
			<A:LabelHeading text="Date"  addStyleNames=" w3-light-blue {style.margin}" ></A:LabelHeading>
			</g:VerticalPanel>
				<g:VerticalPanel >
			<d:DateBox addStyleNames=" w3-panel w3-light-blue {style.margin}"></d:DateBox> 
			</g:VerticalPanel>
			<g:VerticalPanel>
			<d:DateBox></d:DateBox>
			</g:VerticalPanel>
		</g:HorizontalPanel>
		
		
		<g:HorizontalPanel>
			<g:VerticalPanel>
			<A:LabelHeading text="From" width="180px" addStyleNames=" w3-light-blue {style.margin}" ></A:LabelHeading>
			</g:VerticalPanel>
			<g:VerticalPanel>
			<g:TextBox text="MR XYZ,Head of internal Audit" addStyleNames=" w3-panel {style.margin}" ui:field="txtBoxFrom" width="200px"></g:TextBox>
			</g:VerticalPanel>
			<g:VerticalPanel>
			<A:LabelHeading text="Reference Number" width="180px" addStyleNames=" {style.margin}" ></A:LabelHeading>
			</g:VerticalPanel>
			<g:VerticalPanel>
			<g:TextBox text="Company name Internal Audit" addStyleNames=" w3-panel {style.margin}"  ui:field="txtBoxReference" width="200px"></g:TextBox>
			
			</g:VerticalPanel>
		</g:HorizontalPanel>
			
			<g:HorizontalPanel>
			<g:VerticalPanel>
			<g:HorizontalPanel>
			<A:LabelHeading text="For Action(T0)" width="180px" addStyleNames=" w3-light-blue {style.margin}"></A:LabelHeading>
			<g:TextBox text="MR XYZ,Director XXX" ui:field="txtBoxForAction" width="200px" addStyleNames=" w3-panel"></g:TextBox>
			</g:HorizontalPanel>
			</g:VerticalPanel>
			
			</g:HorizontalPanel>
		
			
			
		
			<g:VerticalPanel>
				<g:HorizontalPanel>
			<A:LabelHeading text="For Information(CC)" width="180px" addStyleNames=" w3-light-blue {style.margin}" ></A:LabelHeading>
		    
			<g:TextBox text="CXO Detail" width="200px"  addStyleNames=" w3-panel" ui:field="txtBoxForInfo"></g:TextBox>
			</g:HorizontalPanel>
			</g:VerticalPanel>
			
	</g:VerticalPanel>
	<g:VerticalPanel width="813px" height="400px">
	
			
			<g:VerticalPanel>
			<g:HorizontalPanel>
			<A:LabelHeading text="Subject" width="180px" addStyleNames=" w3-light-blue {style.margin}"></A:LabelHeading>
			<g:TextBox width="200px" text="Engegement Name" ui:field="txtBoxSubject" addStyleNames=" w3-panel"></g:TextBox>
			</g:HorizontalPanel>
			</g:VerticalPanel>
		
			
			<g:HorizontalPanel>
			<g:TextArea width="850px"  height="350px"  ui:field="txtAreaBody" text="bla bla blab blablaba"> </g:TextArea>
			</g:HorizontalPanel>
				<g:VerticalPanel ui:field="panelUpload"></g:VerticalPanel>
	</g:VerticalPanel>
	<g:Button text="Send" ui:field="btnSend" styleName="w3-button w3-round-xxlarge w3-hover-blue" ></g:Button>
	
	</g:HTMLPanel>
</ui:UiBinder> 