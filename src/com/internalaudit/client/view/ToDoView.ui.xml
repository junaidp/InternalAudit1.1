<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"  xmlns:m="urn:import:com.sencha.gxt.widget.core.client.menu" xmlns:d="urn:import:com.google.gwt.user.datepicker.client">
	<ui:style>
	.padding{
	padding-top: 15px;
}
.button{
	margin-left: 50px;
}
	</ui:style>
	<g:HTMLPanel>
	<g:VerticalPanel addStyleNames="w3-panel w3-pale-green">
	<g:Label addStyleNames="{style.padding}">Description</g:Label>
	<g:TextBox ui:field="txtBoxDescription"  width="300px" height="100px"></g:TextBox>
	
	<g:Label addStyleNames="{style.padding}">Assigned To</g:Label>
	<g:ListBox ui:field="listBoxAssignedTo" >

	</g:ListBox>
	<g:Label  addStyleNames="{style.padding}">Due Date</g:Label>
	<d:DateBox ui:field="dueDate"></d:DateBox>
	<g:HorizontalPanel addStyleNames="{style.button}">
	<g:VerticalPanel>
	<g:Button ui:field="btnSave" addStyleNames="w3-button w3-round-large w3-margin">Save</g:Button>
	</g:VerticalPanel>
	<g:VerticalPanel>
	<g:Button ui:field="btnCancel" addStyleNames="w3-button w3-round-large w3-margin">Cancel</g:Button>
	</g:VerticalPanel>
	</g:HorizontalPanel>
	</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 