<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
 xmlns:f="urn:import:com.sencha.gxt.widget.core.client.form" xmlns:c="urn:import:com.sencha.gxt.widget.core.client.container">
<ui:style>
		.marginLeft{
	margin-left: 20px;
}
	</ui:style>
<g:HTMLPanel>

		<div>
			<g:Label ui:field="heading" styleName="heading"></g:Label>
		</div>
		 
		<div>
			<g:Label ui:field="objectiveName"></g:Label>
		</div>
		
		<div class="estimationLayout">
		
		<g:Label styleName="hidden" ui:field="jobTimeEstId" visible="false">0</g:Label>
		
			<div class="form-row">
			
				<div class="label-div">
				 	<g:Label visible="false"> Area of Expertise </g:Label>
				</div>
				
				<div class="field-div">
					<g:Label ui:field="areaOfExpertise"></g:Label>
				</div>
			
			</div>		
			
			<div class="form-row">
			
				<div class="label-div">
					<g:Label text="High level scope of work" wordWrap="false"></g:Label>
				</div>
				
				<div class="field-div">
					<g:TextArea ui:field="highLevelScopeOfWork" styleName="txtDetail"></g:TextArea>
				</div>
			
			</div>
			
			<div class="form-row">	
				<div class="label-div">
					<g:Label text="No. of resources required" wordWrap="false"></g:Label>
				</div>
				
				<div class="field-div">
					<g:HorizontalPanel ui:field="skillResourceContainer">
			           
					</g:HorizontalPanel>
				</div>
			</div>
				
			<div class="containercheck">
		<div class="form-rowSmall">
				<div class="label-div">
					<g:Label text="Estimated Weeks" wordWrap="false"></g:Label>
				</div>
				
				<div class="field-div">
				<c:VerticalLayoutContainer ui:field="estimatedWeeksContainer">
				</c:VerticalLayoutContainer>
					
				</div>
			</div>	
				<div class="form-row">		
				<div class="label-div">
					<g:Label text="Field Work Man Hours" wordWrap="false"></g:Label>
				</div>
				
				<div class="field-div">
					<g:TextBox ui:field="fieldWorkManHoursTextBox" enabled="false"  styleName="checkTEXTBOX"></g:TextBox>
				</div>
			
			
			</div>	
			</div>	
			
			
			
			<div class="containercheck">
		<div class="form-rowSmall">
				<div class="label-div">
					<g:Label text="Internal Audit Management Hours" wordWrap="false"></g:Label>
				</div>
				
				
				<div class="field-div">
				<c:VerticalLayoutContainer ui:field="managementHoursContainer">
				</c:VerticalLayoutContainer>
			</div>
			</div>
			
			
			
			<div class="form-row">
			
				<div class="label-div">
					<g:Label text="Total Working Man Hours" wordWrap="false" ></g:Label>
				</div>
				
				<div class="field-div">
					<g:TextBox ui:field="totalWorkingManHoursTextBox" enabled="false"  styleName="checkTEXTBOX"></g:TextBox>
				</div>
			
			</div>
			
			</div>	
			<div class="form-row">
			
				<div class="label-div">
					<g:Label text="Place of work" wordWrap="false"></g:Label>
				</div>
				
				<div class="field-div">
					<g:ListBox ui:field="placeofWorkListBox" styleName="lstEstForm">
						
						<g:item>Outstation</g:item>
						<g:item>Inhouse</g:item>
						<g:item>Inhouse and Outstation</g:item>
						
					</g:ListBox>
				</div>
			
			</div>	
			
			<div class="containercheck">
		<div class="form-rowSmall">
			
				<div class="label-div">
					<g:Label ui:field="travelingDayslbl" text="Traveling Days" wordWrap="false"></g:Label>
				</div>
				
			
				<div class="field-div">
				<c:VerticalLayoutContainer ui:field="travelingDaysContainer">
				</c:VerticalLayoutContainer>
							</div>
			
			</div>
			
			<div class="form-row">
			
				<div class="label-div">
					<g:Label wordWrap="false">Hours inclusive of travel</g:Label>
				</div>
				
				<div class="field-div">
					<g:TextBox ui:field="hoursInclusiveOfTravel" enabled="false" styleName="checkTEXTBOX"></g:TextBox>
				</div>
			
			</div>
			</div>
			<div class="form-row">
			
				<div class="label-div">
					<g:Label text="" wordWrap="false"></g:Label>
				</div>
				<div class="label-div">
					<g:Label text="" wordWrap="false"></g:Label>
				</div>
				<div class="label-div">
					<g:Label text="" wordWrap="false"></g:Label>
				</div>
				
				
				

				<div class="field-div">
					<g:Button text="Save" ui:field="saveJobTimeEst" styleName="buttonDesign"></g:Button>
					<g:Button text="Back" ui:field="backButton" styleName="buttonDesign"></g:Button>
				</div>
			
			</div>		
						
																	
		</div>
		<!-- end layout  -->
	</g:HTMLPanel>
</ui:UiBinder> 

