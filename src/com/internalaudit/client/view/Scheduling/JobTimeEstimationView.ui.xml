<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"	xmlns:g="urn:import:com.google.gwt.user.client.ui">

<g:HTMLPanel>
		<div>
			<g:Label ui:field="heading" styleName="heading"></g:Label>
		</div>
		 
		<div>
			<g:Label ui:field="objectiveName"></g:Label>
		</div>
		
		<div class="estimationLayout">
		
		<g:Label styleName="hidden" ui:field="jobTimeEstId" visible="false">0</g:Label>
		
			<div class="form-row">
			
				<div class="label-div">
				 	<g:Label visible="false"> Area of Expertise </g:Label>
				</div>
				
				<div class="field-div">
					<g:Label ui:field="areaOfExpertise"></g:Label>
				</div>
			
			</div>		
			
			<div class="form-row">
			
				<div class="label-div">
					<g:Label text="High level scope of work" wordWrap="false"></g:Label>
				</div>
				
				<div class="field-div">
					<g:TextArea ui:field="highLevelScopeOfWork" styleName="txtDetail"></g:TextArea>
				</div>
			
			</div>
			
			<div class="form-row">	
				<div class="label-div">
					<g:Label text="No. of resources required" wordWrap="false"></g:Label>
				</div>
				
				<div class="field-div">
					<g:HorizontalPanel ui:field="skillResourceContainer">
			
					</g:HorizontalPanel>
				</div>
			</div>
		<div	class="containerHorizontal">
			<div class="form-rowSmall">
			
				<div class="label-div">
					<g:Label text="Estimated Weeks" wordWrap="false"></g:Label>
				</div>
				
				<div class="field-div">
					<g:ListBox ui:field="estimatedWeeksListBox" styleName="lstEstForm">
						<g:item>1</g:item>
						<g:item>2</g:item>
						<g:item>3</g:item>
						<g:item>4</g:item>
						<g:item>5</g:item>
						<g:item>6</g:item>
						<g:item>7</g:item>
						<g:item>8</g:item>
						<g:item>9</g:item>
						<g:item>10</g:item>
					</g:ListBox>
				</div>
			
			</div>	
			
			
			<div class="form-row">
			
				<div class="label-div">
					<g:Label text="Field Work Man Hours" wordWrap="false"></g:Label>
				</div>
				
				<div class="field-div">
					<g:TextBox ui:field="fieldWorkManHoursTextBox" enabled="false"  styleName="smallTEXTBOX"></g:TextBox>
				</div>
			
			</div>
			
			</div>
			<div	class="containerHorizontal">
			<div class="form-rowSmall">
			
				<div class="label-div">
					<g:Label text="Management Hours" wordWrap="false"></g:Label>
				</div>
				
				<div class="field-div">
					<g:TextBox ui:field="managementHoursTextBox"  styleName="smallTEXTBOX"></g:TextBox>
				</div>
			
			</div>
			
			
			
			<div class="form-row">
			
				<div class="label-div">
					<g:Label text="Total Working Man Hours" wordWrap="false" ></g:Label>
				</div>
				
				<div class="field-div">
					<g:TextBox ui:field="totalWorkingManHoursTextBox" enabled="false"  styleName="smallTEXTBOX"></g:TextBox>
				</div>
			
			</div>
			
			</div>
			<div class="form-row">
			
				<div class="label-div">
					<g:Label text="Place of work" wordWrap="false"></g:Label>
				</div>
				
				<div class="field-div">
					<g:ListBox ui:field="placeofWorkListBox" styleName="lstEstForm">
						
						<g:item>Outstation</g:item>
						<g:item>Inhouse</g:item>
						<g:item>Inhouse and Outstation</g:item>
						
					</g:ListBox>
				</div>
			
			</div>	
			
			<div	class="containerHorizontal">
			<div class="form-rowSmall">
			
				<div class="label-div">
					<g:Label text="Traveling Days" wordWrap="false"></g:Label>
				</div>
				
				<div class="field-div">
					<g:ListBox ui:field="travelingDaysListBox" styleName="lstEstForm">
						<g:item>0</g:item>
						<g:item>1</g:item>
						<g:item>2</g:item>
						<g:item>3</g:item>
						<g:item>4</g:item>
						<g:item>5</g:item>
						<g:item>6</g:item>
						<g:item>7</g:item>
						<g:item>8</g:item>
					</g:ListBox>
				</div>
			
			</div>
			
			<div class="form-row">
			
				<div class="label-div">
					<g:Label wordWrap="false">Hours inclusive of travel</g:Label>
				</div>
				
				<div class="field-div">
					<g:TextBox ui:field="hoursInclusiveOfTravel" enabled="false" styleName="smallTEXTBOX"></g:TextBox>
				</div>
			
			</div>
			</div>	
			<div class="form-row">
			
				<div class="label-div">
					<g:Label text="" wordWrap="false"></g:Label>
				</div>
				
				<div class="field-div">
					<g:Button text="Save" ui:field="saveJobTimeEst" styleName="buttonDesign"></g:Button>
					<g:Button text="Back" ui:field="backButton" styleName="buttonDesign" ></g:Button>
				</div>
			
			</div>		
						
																	
		</div>
		<!-- end layout  -->
	</g:HTMLPanel>
</ui:UiBinder> 

