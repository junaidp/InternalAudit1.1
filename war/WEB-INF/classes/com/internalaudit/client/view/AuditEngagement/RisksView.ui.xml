<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>
	<g:ScrollPanel height="390px" width="1197px">
	<g:HTMLPanel>
	
	<g:Label styleName="heading"> Risks </g:Label>
	<div>
	
	<g:HorizontalPanel spacing="5">
	<g:Image url="images/tick.png" ui:field="imgApproved" visible="false" title="Approved"></g:Image>
	
	<g:Label ui:field="submittedBy" visible="false" styleName="blue"> </g:Label>
	<g:Label> :: </g:Label>
	<g:Label ui:field="approvedBy" visible="false" styleName="blue"> </g:Label>
	</g:HorizontalPanel>
	</div>
	
	<g:HorizontalPanel ui:field="feedbackPanel" visible="false" spacing="3">
	<g:Label> Feedback: </g:Label>
	<g:Label ui:field="feedback" styleName="blue"></g:Label>
	</g:HorizontalPanel>
	
	<g:Button ui:field="addMore">Add More</g:Button>
	
	<g:HorizontalPanel styleName="risksRow" width="424px">
	
	<!-- 	<g:Label styleName="txtNormal">Description</g:Label>
		<g:Label styleName="txtNormal">Existing Control</g:Label>
	 -->
	</g:HorizontalPanel>
	
	<g:VerticalPanel ui:field="riskRows">
	
	<g:HorizontalPanel styleName="risksRow">
	
		<g:TextBox ui:field="desc1" styleName="txtNormal"></g:TextBox>
		<g:TextBox ui:field="control1" styleName="txtNormal"></g:TextBox>
	
	</g:HorizontalPanel>
	
	<g:HorizontalPanel styleName="risksRow">
	
		<g:TextBox ui:field="desc2" styleName="txtNormal"></g:TextBox>
		<g:TextBox ui:field="control2" styleName="txtNormal"></g:TextBox>
	
	</g:HorizontalPanel>
	
	<g:HorizontalPanel styleName="risksRow">
	
		<g:TextBox ui:field="desc3" styleName="txtNormal"></g:TextBox>
		<g:TextBox ui:field="control3" styleName="txtNormal"></g:TextBox>
	
	</g:HorizontalPanel>
	
	</g:VerticalPanel>
	
	
	<g:HorizontalPanel ui:field="initiationButtonsPanel" visible="false" >
	<g:Button ui:field="saveRisks">Save</g:Button>
	<g:Button ui:field="submit">Submit</g:Button>
	</g:HorizontalPanel>
	<g:HorizontalPanel ui:field="approvalButtonsPanel" visible="false">
	<g:Button ui:field="approve" >Approve</g:Button>
	<g:Button ui:field="reject" >Feedback</g:Button>
	</g:HorizontalPanel>
	
	</g:HTMLPanel>
	</g:ScrollPanel>
</ui:UiBinder> 