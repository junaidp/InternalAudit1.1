<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:A="urn:import:com.internalaudit.client.view.AuditEngagement">
	<ui:style>
		.heading{
	font-size: 18px;
}
.txtExtendedWidths {
	width : 500px;
	padding: 5px;
	margin: 5px;
	
}
.txtShrikedWidths {

	padding : 5px;
	margin : 5px;
	width : 170px;
}
.risksRow {
	padding : 5px;
	margin : 5px;
}
	</ui:style>
	<g:ScrollPanel height="390px" width="1197px">
	
	<g:HTMLPanel>
	
	<A:LabelHeading addStyleNames="{style.heading}"> Audit Work Program </A:LabelHeading>
	
	<div>
	
	<g:HorizontalPanel spacing="5">
	<g:Image url="images/tick.png" ui:field="imgApproved" visible="false" title="Approved"></g:Image>
	
	<g:Label ui:field="submittedBy" visible="false" styleName="blue"> </g:Label>
	<g:Label ui:field="approvedBy" visible="false" styleName="blue"> </g:Label>
	</g:HorizontalPanel>
	</div>
	
	<g:HorizontalPanel ui:field="feedbackPanel" visible="false" spacing="3">
	<g:Label> Feedback: </g:Label>
	<g:Label ui:field="feedback" styleName="blue"></g:Label>
	</g:HorizontalPanel>
	
	<g:Button ui:field="addMore">Add Audit Work</g:Button>
	
	<g:HorizontalPanel ui:field="heading" styleName="risksRow" width="611px" verticalAlignment="middle">
	
		<A:LabelHeading wordWrap="false" addStyleNames="{style.risksRow}">Serial No.</A:LabelHeading>
		<A:LabelHeading addStyleNames="{style.txtExtendedWidths}">Audit Program</A:LabelHeading>
		<A:LabelHeading addStyleNames="{style.txtShrikedWidths}">Reviewer</A:LabelHeading>
		<A:LabelHeading addStyleNames="{style.txtShrikedWidths}">Reference(Existing Controls)</A:LabelHeading>
		<!--  <A:LabelHeading styleName="txtShrikedWidth">Planned Status</A:LabelHeading> -->
	
	</g:HorizontalPanel>
	
	 
	<g:VerticalPanel ui:field="rows">
		
	<g:HorizontalPanel styleName="risksRow">
<!--	
		<g:TextBox styleName="txtShort"></g:TextBox>
		<g:TextBox styleName="txtExtendedWidth"></g:TextBox>
		<g:ListBox styleName="txtShrikedWidth"></g:ListBox>
 		<g:TextBox styleName="txtShrikedWidth"></g:TextBox> 
	
	</g:HorizontalPanel>
	
	<g:HorizontalPanel styleName="risksRow">
	
		<g:TextBox styleName="txtShort"></g:TextBox>
		<g:TextBox styleName="txtExtendedWidth"></g:TextBox>
		<g:ListBox styleName="txtShrikedWidth"></g:ListBox>
 		<g:TextBox styleName="txtShrikedWidth"></g:TextBox> 
	
	</g:HorizontalPanel>
	
	<g:HorizontalPanel styleName="risksRow">
	
		<g:TextBox styleName="txtShort"></g:TextBox>
		<g:TextBox styleName="txtExtendedWidth"></g:TextBox>
		<g:ListBox styleName="txtShrikedWidth"></g:ListBox>
		<g:TextBox styleName="txtShrikedWidth"></g:TextBox> 
	-->	
	</g:HorizontalPanel>
		
	</g:VerticalPanel>

	<g:HorizontalPanel ui:field="initiationButtonsPanel" visible="false">
	<g:Button ui:field="save">Save</g:Button>
	<g:Button ui:field="submit">Submit</g:Button>
	</g:HorizontalPanel>
	<g:HorizontalPanel ui:field="approvalButtonsPanel" visible="false">
	<g:Button ui:field="approve" >Approve</g:Button>
	<g:Button ui:field="reject" >Feedback</g:Button>
	</g:HorizontalPanel>

	</g:HTMLPanel>
		</g:ScrollPanel>
</ui:UiBinder> 